services:
  # üóÑÔ∏è Base de donn√©es PostgreSQL
  postgres:
    image: postgres:15-alpine
    container_name: dip-postgres
    environment:
      POSTGRES_DB: synapse
      POSTGRES_USER: synapse
      POSTGRES_PASSWORD: "hjchshf"
    volumes:
      - ./data/postgres:/var/lib/postgresql/data
    networks:
      - dip-network
    restart: unless-stopped
  postgres2:
    image: postgres:15-alpine
    container_name: dip-postgres2
    environment:
      POSTGRES_DB: synapse
      POSTGRES_USER: synapse
      POSTGRES_PASSWORD: "hjchshf"
    volumes:
      - ./data/postgres2:/var/lib/postgresql/data
    networks:
      - dip-network
    restart: unless-stopped
  # üí¨ Matrix Synapse (Serveur de messagerie)
  matrix-synapse:
    image: matrixdotorg/synapse:latest
    container_name: dip-matrix
    depends_on:
      - postgres
    environment:
      SYNAPSE_SERVER_NAME: ${MATRIX_SERVER_NAME:-dip.local}
      SYNAPSE_REPORT_STATS: "no"
    volumes:
      - ./data/matrix:/data
      - ./services/matrix/homeserver.yaml:/data/homeserver.yaml
      - ./services/matrix/log.config:/data/log.config
      - ./security/ssl:/data/ssl:ro
    ports:
      - "8008:8008"
    networks:
      - dip-network
    restart: unless-stopped
    healthcheck:
      test: ["CMD-SHELL", "curl -f http://localhost:8008/_matrix/client/versions || exit 1"]
      interval: 1m30s
      timeout: 10s
      retries: 3

  # üåê Element Web (Client Matrix)
  element:
    image: vectorim/element-web:latest
    container_name: dip-element
    volumes:
      - ./services/matrix/element-config.json:/app/config.json
    ports:
      - "8008:80"
    networks:
      - dip-network
    restart: unless-stopped

  # üìö Wiki.js
  wiki:
    image: requarks/wiki:2
    container_name: dip-wiki
    depends_on:
      - postgres2
    environment:
      DB_TYPE: postgres
      DB_HOST: postgres2
      DB_PORT: 5432
      DB_USER: synapse
      DB_PASS: "hjchshf"
      DB_NAME: synapse
      APP_URL: "http://192.168.70.10/wiki" 

    volumes:
      - ./data/wiki:/wiki/data
    ports:
      - "3000:3000"
    networks:
      - dip-network
    restart: unless-stopped

  # üåê Nginx Reverse Proxy
  nginx:
    image: nginx:alpine
    container_name: dip-nginx
    depends_on:
      - element
      - wiki
      - matrix-synapse
    volumes:
      - ./frontend/landing-page:/usr/share/nginx/html
      - ./security/ssl:/etc/nginx/ssl
      - ./nginx-conf/nginx.conf:/etc/nginx/conf.d/default.conf
    ports:
      - "83:80"
      - "443:443"
    networks:
      - dip-network
    restart: unless-stopped

networks:
  dip-network:
    driver: bridge
    #ipam:
    #  config:
    #    - subnet: ${NETWORK_SUBNET}

volumes:
  postgres-data:
  matrix-data:
  wiki-data:
